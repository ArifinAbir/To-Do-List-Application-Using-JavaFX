<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.rfn.to_do_list.FilteredTasksController">
    <top>
        <Label fx:id="titleLabel" text="Tasks in Interval" BorderPane.alignment="CENTER">
            <font><Font name="System Bold" size="24.0" /></font>
            <padding><Insets bottom="10.0" top="10.0" /></padding>
        </Label>
    </top>
    <center>
        <ScrollPane fitToWidth="true" hbarPolicy="NEVER">
            <content>
                <VBox fx:id="taskContainer" spacing="10.0" />
            </content>
            <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
        </ScrollPane>
    </center>
</BorderPane>